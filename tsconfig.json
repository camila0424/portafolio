{
  "compilerOptions": {
    "target": "ES6",                     // Versión de JS a compilar
    "module": "ESNext",                  // Sistema de módulos
    "jsx": "react-jsx",                  // Para React 17+ JSX
    "strict": true,                      // Activa comprobaciones estrictas
    "esModuleInterop": true,             // Para importar módulos correctamente
    "moduleResolution": "node",          // Resuelve módulos como Node
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,                // Omite chequear tipos de librerías
    "baseUrl": "src",                    // Ruta base para imports
    "allowJs": true,                      // Permite archivos JS
    "resolveJsonModule": true,            // Permite importar JSON
    "noImplicitAny": true,                // Evita variables sin tipo explícito
    "strictNullChecks": true,             // Comprobación estricta de null/undefined
    "types": ["react", "react-dom"]       // Asegura que los tipos de React estén disponibles
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
